<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
    xmlns:gap       = "http://phonegap.com/ns/1.0"
    xmlns:android   = "http://schemas.android.com/apk/res/android" 
    id              = "com.xsmart.tv"
    versionCode     = "25"
    version         = "3.0" >
    
    <name>XSMART</name>
    <description>all in one</description>
    <icon src="icon/store.png" />
    
    <preference name="InAppBrowserStorageEnabled" value="true"/>
    <preference name="orientation" value="landscape" />
    <preference name="fullscreen" readonly="true" value="true" />
    <preference name="OverrideUserAgent" value="android/cordova" />
    
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="android-installLocation" value="auto" />
    
    <icon src="icon/ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="icon/mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="icon/hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="icon/xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="icon/xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="icon/xxxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

    <!--<resource-file src="tvdpi.png" target="res/values/tvdpi.png" />-->
    <!--<config-file platform="android" parent="/manifest" mode="merge">
        <application android:banner="@drawable/icon" />
    </config-file>-->
    
    
    <!--<access origin="http://app.xsmart.tv" />-->
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <!--<content src="http://app.xsmart.tv/"></content>-->
    
    <!-- Core plugins -->
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-media" />
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="com.badrit.macaddress" />
    <plugin name="cordova-open" />

    <author href="http://xsmart.tv" email="support@xsmart.tv">
        JasonX, Lestat, Dronbi4
    </author>
</widget>
