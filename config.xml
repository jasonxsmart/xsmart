<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.xsmart.tv"
    versionCode = "23"
    version     = "3.0" >
    <name>XSMART</name>
    <description>all in one</description>
    <icon src="store.png" />
    
    <preference name="InAppBrowserStorageEnabled" value="true"/>
    <preference name="orientation" value="landscape" />
    <preference name="fullscreen" readonly="true" value="true" />
    <preference name="OverrideUserAgent" value="android/cordova" />
    
    <platform name="android" >
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="android-installLocation" value="auto" />
        
        <icon src="ldpi.png" platform="android" qualifier="ldpi" />
        <icon src="mdpi.png" platform="android" qualifier="mdpi" />
        <icon src="hdpi.png" platform="android" qualifier="hdpi" />
        <icon src="xhdpi.png" platform="android" qualifier="xhdpi" />
        <icon src="xxhdpi.png" platform="android" qualifier="xxhdpi" />
        <icon src="xxxhdpi.png" platform="android" qualifier="fr-xxhdpi" />
        <icon src="tvdpi.png" platform="android" qualifier="tvdpi" />
        
        <config-file platform="android" parent="/manifest" mode="merge">
            <supports-screens
                android:xlargeScreens="false"
                android:largeScreens="false"
                android:smallScreens="false" />
            </config-file>
    </platform>
    
    <!--<access origin="http://app.xsmart.tv" />-->
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <!--<content src="http://app.xsmart.tv/"></content>-->
    
    <!-- Core plugins -->
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-media" />
   <plugin name=" cordova-plugin-whitelist" />

    <author href="http://xsmart.tv" email="support@xsmart.tv">
        JasonX, Lestat, Dronbi4
    </author>
</widget>
