<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.xsmart.tv"
    versionCode = "10"
    version     = "3.0" >
    
    <name>XSMART</name>
    <description>all in one</description>
    
    
    <js-module src="Backbutton.js" name="Backbutton">
        <clobbers target="navigator.Backbutton" />
    </js-module>
<!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="BackbuttonPlugin">
                <param name="android-package" value="com.xsmart.tv.BackbuttonPlugin"/>
            </feature>
        </config-file>
        <source-file src="BackbuttonPlugin.java" target-dir="src/com/xsmar/tv/" />
    </platform>
    
<!-- Core plugins -->
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-media" />
<!-- Core plugins -->
    <preference name="orientation" value="landscape" />
    
    <access origin="*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
<!-- versionCode is optional and Android only -->   
    <icon src="store.png" />
    <icon src="ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="xxxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

  <author href="http://xsmart.tv" email="support@xsmart.tv">
      JasonX, Lestat, Dronbi4
  </author>
</widget>
